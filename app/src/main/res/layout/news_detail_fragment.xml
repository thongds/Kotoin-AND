<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="@dimen/dimens_10dp"
            android:id="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimens_10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:textSize="@dimen/text_24sp"
            android:textColor="#000000"
            android:textAlignment="textStart"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/thumb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimens_24dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_150dp"
            android:src="@drawable/default_thumb"
            android:scaleType="centerCrop" />

        <TextView
            android:padding="@dimen/dimens_10dp"
            android:id="@+id/url"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimens_24dp"
            app:layout_constraintTop_toBottomOf="@id/thumb"
            android:textSize="@dimen/text_16sp"
            android:textColor="#0d3ce2"
            android:textAlignment="textStart"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content"
            android:layout_marginStart="@dimen/dimens_10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/dimens_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/url"
            android:layout_width="0dp"
            android:textSize="@dimen/text_16sp"
            android:textColor="#6d6d6f"
            android:textAlignment="textStart"
            android:textStyle="italic"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>